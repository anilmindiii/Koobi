<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/text_color"
            android:text="How was your experience of this booking?"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/text_color"
            android:text="Your service has been completed. Please review how satisfied you are with "/>

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/userRating"
            style="@style/RatingBarGraycustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-48dp"
            android:gravity="center"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="0"
            android:scaleX=".6"
            android:scaleY=".6"
            android:stepSize="1"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            tools:ignore="UseCompoundDrawables">

            <LinearLayout
                android:id="@+id/llAddComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start">

                <TextView
                    style="@style/TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center"
                    android:text="@string/add_comment"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ivDropDown"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:tint="@color/gray"
                    app:srcCompat="@drawable/down_arrow_ico"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <EditText
                android:id="@+id/etComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="65dp"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:hint="Comment..."
                android:paddingBottom="10dp"
                android:textColorHint="@color/gray"
                android:imeOptions="actionDone"
                android:inputType="none"
                android:maxLength="150"
                android:maxLines="5"
                android:textSize="14sp"
                android:background="@null"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:visibility="gone"
                android:textColor="@color/text_color" />

        </LinearLayout>

        <TextView
            android:id="@+id/btnSumbit"
            android:background="@drawable/rectangular_fill_primary"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="@string/submit"
            android:textSize="16sp" />


    </LinearLayout>

</android.support.v7.widget.CardView>