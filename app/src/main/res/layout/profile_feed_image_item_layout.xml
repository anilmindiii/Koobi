<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/main_layout"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_white_gray_border"
        android:orientation="vertical"
        android:visibility="visible">

        <include
            layout="@layout/feed_item_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="315dp">

            <RelativeLayout
                android:id="@+id/rl_imageView"
                android:layout_width="match_parent"
                android:layout_height="275dp">

                <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/ll_Dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />


            </RelativeLayout>

            <include
                layout="@layout/feed_item_footer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_alignParentBottom="true" />

            <RelativeLayout
                android:id="@+id/ly_share"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="22dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shape_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_report"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:fontFamily="@font/nunito_regular"
                        android:scaleType="center"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="Report post"
                        android:layout_gravity="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="14dp" />

                    <View
                        android:id="@+id/view_divider"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/gray2"/>

                    <TextView
                        android:id="@+id/tv_share_post"
                        android:layout_below="@+id/tv_report"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="2dp"
                        android:paddingLeft="15dp"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nunito_regular"
                        android:scaleType="center"
                        android:text="Share post"
                        android:layout_gravity="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="14dp" />


                </LinearLayout>



            </RelativeLayout>



        </RelativeLayout>

        <com.hendraanggrian.widget.SocialTextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web|email"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/nunito_regular"
            android:textColorLink="@color/text_color"
            android:textColor="@color/text_color"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray2" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.mualab.org.user.Views.cv.AspectRatioImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:ari_aspect="height"
                app:ari_ratio="1" />

            <com.mualab.org.user.Views.cv.SquareImageView
                android:id="@+id/videoIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:padding="2dp"
                android:src="@drawable/play_bg_icon"
                android:visibility="gone" />

        </FrameLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
