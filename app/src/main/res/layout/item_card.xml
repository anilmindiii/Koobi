<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sample1"
    android:layout_height="65dp"
    android:background="@color/white"
    android:footerDividersEnabled="false"
    app:clickToClose="true">

    <LinearLayout
        android:id="@+id/sliding"
        android:tag="side1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivRemove"
            app:srcCompat="@drawable/ic_delete_button"
            android:layout_width="50dp"
            android:tint="@color/white"
            android:background="@color/red"
            android:padding="12dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cv_main_view"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <RelativeLayout
            android:id="@+id/ly_card_img"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/very_light">

            <ImageView
                android:id="@+id/iv_card_img"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:padding="2dp"
                android:tint="#626262"
                app:srcCompat="@drawable/ic_credit_card"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_card_number"
            android:layout_toRightOf="@+id/ly_card_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nunito_regular"
            android:text="XXXX XXXX XXXX XXXX"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_card_selceted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_check_white_18dp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray2"/>


    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>