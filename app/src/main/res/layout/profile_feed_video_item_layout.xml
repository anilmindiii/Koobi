<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_white_gray_border"
        android:orientation="vertical">

        <include
            layout="@layout/feed_item_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">

            <RelativeLayout
                android:id="@+id/rl_imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp">

                <ImageView
                    android:id="@+id/ivFeedCenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center"
                    android:scaleType="centerCrop"
                    android:foreground="@drawable/play_bg_icon"
                    android:src="@drawable/gallery_placeholder" />

                <View
                    android:id="@+id/vBgLike"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_like_circle_background"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/inactive_like_ico"
                    android:tint="@color/colorPrimary"
                    android:visibility="invisible" />


            </RelativeLayout>

            <include
                layout="@layout/feed_item_footer"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="40dp" />

            <RelativeLayout
                android:id="@+id/ly_share"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="22dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shape_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_report"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:fontFamily="@font/nunito_regular"
                        android:scaleType="center"
                        android:paddingLeft="15dp"
                        android:text="Report post"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="14dp" />

                    <View
                        android:id="@+id/view_divider"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/gray2"/>

                    <TextView
                        android:id="@+id/tv_share_post"
                        android:layout_below="@+id/tv_report"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="2dp"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nunito_regular"
                        android:scaleType="center"
                        android:text="Share post"
                        android:layout_gravity="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="14dp" />


                </LinearLayout>



            </RelativeLayout>

        </RelativeLayout>


        <com.hendraanggrian.widget.SocialTextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web|email"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:fontFamily="@font/nunito_regular"
            android:textColorLink="@color/text_color"
            android:textColor="@color/text_color"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.mualab.org.user.Views.cv.AspectRatioImageView
                android:id="@+id/imageView"
                app:ari_aspect="height"
                app:ari_ratio="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <com.mualab.org.user.Views.cv.SquareImageView
                android:id="@+id/videoIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:padding="2dp"
                android:src="@drawable/play_bg_icon"
                android:visibility="gone" />

        </FrameLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
