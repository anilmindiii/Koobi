<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ly_block_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:padding="5dp"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/bg_splash">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_block"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:layout_gravity="center"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_user_block"
            tools:ignore="ContentDescription" />


        <TextView
            android:layout_below="@+id/img_block"
            style="@style/TextView"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Service Provider Unavailable!"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_below="@+id/img_block"
            android:id="@+id/tv_block_msg"
            style="@style/TextView"
            android:gravity="center"
            android:text="The Service provider is temporary out of service due to some reason, but returns shortly. We sincerely apologize for the inconvenience."
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_finish"
            style="@style/My_Button"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:padding="5dp"
            android:text="Search Another Artist" />

    </LinearLayout>

</LinearLayout>