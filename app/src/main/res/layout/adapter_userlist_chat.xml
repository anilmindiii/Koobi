<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="63dp"
    android:paddingLeft="8dp"
    android:background="@color/white"
    android:paddingRight="8dp">

    <RelativeLayout
        android:id="@+id/rlItemMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/gradient_circle_img"
            android:src="@drawable/default_placeholder"
            app:civ_border_color="@color/transparent"
            app:civ_border_width="1.2dp" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_toRightOf="@+id/ivProfilePic"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/chat_checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/checbox_unselected"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:gravity="center"

            />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray_shadow"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        />

</RelativeLayout>