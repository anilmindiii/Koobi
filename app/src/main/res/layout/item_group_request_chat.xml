<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:visibility="gone"
        android:background="@color/light_gray_shadow"
        />

    <RelativeLayout
        android:id="@+id/llHistoryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:visibility="gone"
        >

        <View
            android:id="@+id/v1"
            android:layout_width="5dp"
            android:layout_height="1dp"
            android:background="@color/light_gray_shadow"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tvHistoryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/v1"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:text="Today"
            android:fontFamily="@font/nunito_regular"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grey"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/tvHistoryTime"
            android:background="@color/light_gray_shadow"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/rlChatHistory"
        android:gravity="center|left">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:civ_border_width="1.8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/default_placeholder"
            android:background="@drawable/gradient_circle_img"
            app:civ_border_color="@color/transparent"
            android:layout_marginLeft="5dp"
            />

        <LinearLayout
            android:id="@+id/llMsg"
            android:layout_toRightOf="@+id/ivProfile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="8dp"
            android:padding="1dp"
            android:layout_toLeftOf="@+id/llCount"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvUname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="neha"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:layout_marginRight="80dp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40 days ago"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="12sp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="message"
                android:maxLines="1"
                android:layout_marginRight="3dp"
                android:ellipsize="end"
                android:gravity="left"
                android:textColor="@color/gray"
                android:fontFamily="@font/nunito_regular"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="2dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/tvReject"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:backgroundTint="@color/red"
                    android:background="@drawable/button_effect_invert"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/white"
                    android:text="Reject" />

                <TextView
                    android:id="@+id/tvAccept"
                    android:layout_toRightOf="@+id/tvReject"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:background="@drawable/button_effect_invert"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/white"
                    android:text="Accept" />

            </RelativeLayout>





        </LinearLayout>



    </RelativeLayout>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center_vertical">




    </RelativeLayout>


    <View
        android:id="@+id/vBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:background="@color/light_gray_shadow"
        />


</LinearLayout>
