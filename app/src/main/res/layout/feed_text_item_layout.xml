<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="2dp"
    android:id="@+id/main_layout"
    android:orientation="vertical">

    <include layout="@layout/feed_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.hendraanggrian.widget.SocialTextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web|email"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_regular"
                android:padding="10dp"
                android:textColorLink="@color/text_color"
                android:textColor="@color/text_color" />

            <include layout="@layout/feed_item_footer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/ly_report"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="1dp"
            android:layout_gravity="right|bottom"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/shape_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_report"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/nunito_regular"
                    android:scaleType="center"
                    android:paddingLeft="15dp"
                    android:text="Report post"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="@color/dark_gray"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/gray2"/>

                <TextView
                    android:id="@+id/tv_share_post"
                    android:layout_below="@+id/tv_report"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/nunito_regular"
                    android:scaleType="center"
                    android:text="Share post"
                    android:layout_gravity="center"
                    android:textColor="@color/dark_gray"
                    android:textSize="14dp" />


            </LinearLayout>




        </RelativeLayout>

    </FrameLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray2" />

</LinearLayout>
